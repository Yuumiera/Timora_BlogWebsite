@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<Timora.Blog.Models.Post>
@{
    ViewData["Title"] = "Blog";
}

<section class="page-header mb-4">
    <div class="card border-0 shadow-sm page-hero">
        <div class="card-body d-flex flex-column flex-md-row align-items-center gap-4">
            <div class="flex-fill">
                <h1 class="display-6 fw-bold text-success-emphasis mb-2">Timora Blog</h1>
                <p class="lead text-muted mb-0">Ruhunuza dokunan hikayeleri, ilham veren fikirleri ve g√ºnl√ºk ya≈üamƒ±nƒ±za renk katacak √∂nerileri ke≈üfedin.</p>
            </div>
            <div class="d-flex gap-3">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="btn btn-success" asp-controller="Blog" asp-action="Create">Yeni Yazƒ± Yaz</a>
                }
                else
                {
                    <a class="btn btn-success" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Create", "Blog")">Yeni Yazƒ± Yaz</a>
                }
                <a class="btn btn-outline-success" href="@Url.Action("Index", "Blog", new { category = "tum-yazilar" })">T√ºm Yazƒ±lar</a>
            </div>
        </div>
    </div>
</section>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">üìù</div>
        <h2 class="empty-state-title">Hen√ºz yazƒ± yok</h2>
        <p class="empty-state-message">Hen√ºz bir yazƒ± eklenmedi. ƒ∞lk yazƒ±yƒ± sen payla≈ü!</p>
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="btn btn-success" asp-controller="Blog" asp-action="Create">Yeni Yazƒ± Yaz</a>
        }
        else
        {
            <a class="btn btn-success" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Create", "Blog")">Yeni Yazƒ± Yaz</a>
        }
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
        @foreach (var post in Model)
        {
            <div class="col">
                <div class="card h-100 post-card shadow-sm border-0">
                    <a href="@Url.Action("Post", "Blog", new { slug = post.Slug })" class="ratio ratio-1x1 post-image-wrapper">
                        @if (!string.IsNullOrWhiteSpace(post.CoverImageUrl))
                        {
                            <img src="@post.CoverImageUrl" class="card-img-top" alt="@post.Title" />
                        }
                        else
                        {
                            var trimmedTitle = post.Title?.Trim() ?? string.Empty;
                            var initialChar = trimmedTitle.FirstOrDefault(char.IsLetterOrDigit);
                            var initial = initialChar == default ? 'Y' : char.ToUpperInvariant(initialChar);
                            <div class="placeholder-image d-flex align-items-center justify-content-center text-success-emphasis">
                                <span>@initial</span>
                            </div>
                        }
                    </a>
                    <div class="card-body d-flex flex-column gap-2">
                        <div class="post-meta small text-muted d-flex gap-2 align-items-center">
                            <span>@post.PublishedAt.ToLocalTime().ToString("dd.MM.yyyy")</span>
                            @if (post.Category != null)
                            {
                                <a class="badge text-bg-success-subtle text-success-emphasis text-decoration-none" href="@Url.Action("Index", "Blog", new { category = post.Category.Slug })">
                                    @post.Category.Name
                                </a>
                            }
                        </div>
                        <h5 class="card-title mb-0">
                            <a class="stretched-link text-decoration-none text-success-emphasis" href="@Url.Action("Post", "Blog", new { slug = post.Slug })">@post.Title</a>
                        </h5>
                    </div>
                </div>
            </div>
        }
    </div>
}
