@using Microsoft.AspNetCore.Localization
@using Timora.Blog.Models.ViewModels
@model Timora.Blog.Models.Post
@{
    ViewData["Title"] = Model.Title;
    var requestCultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCultureFeature?.RequestCulture?.UICulture?.Name ?? "tr-TR";
    if (string.IsNullOrEmpty(currentCulture) || currentCulture == "tr") currentCulture = "tr-TR";
    var L = new Func<string, string>((key) => LanguageStrings.Get(key, currentCulture));
}

<article class="blog-post card border-0 shadow-sm">
    @if (!string.IsNullOrWhiteSpace(Model.CoverImageUrl))
    {
        <div class="ratio ratio-21x9 blog-post-cover">
            <img src="@Model.CoverImageUrl" class="w-100 h-100 object-fit-cover rounded-top" alt="@Model.Title" />
        </div>
    }
    else
    {
        <div class="ratio ratio-21x9 blog-post-cover placeholder-cover"></div>
    }
    <div class="card-body p-4 p-lg-5">
        <header class="mb-4">
            <div class="d-flex flex-wrap gap-2 align-items-center text-muted small mb-3">
                <span>@Model.PublishedAt.ToLocalTime().ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</span>
                @if (Model.Category != null)
                {
                    var categoryName = L(Model.Category.Slug);
                    <a class="badge text-bg-success-subtle text-success-emphasis text-decoration-none" href="@Url.Action("Index", "Blog", new { category = Model.Category.Slug })">@categoryName</a>
                }
            </div>
            <h1 class="display-5 fw-bold text-success-emphasis mb-3">@Model.Title</h1>
            @if (Model.Author != null)
            {
                var authorName = Model.Author.FullName?.Trim() ?? string.Empty;
                var authorInitialChar = authorName.FirstOrDefault(char.IsLetterOrDigit);
                var authorInitial = authorInitialChar == default ? 'Y' : char.ToUpperInvariant(authorInitialChar);
                <div class="d-flex align-items-center gap-3">
                    @if (!string.IsNullOrWhiteSpace(Model.Author.ProfileImageUrl))
                    {
                        <img src="@Model.Author.ProfileImageUrl" class="rounded-circle border border-2 border-success-subtle" style="width:56px;height:56px;object-fit:cover;" alt="@Model.Author.FullName" />
                    }
                    else
                    {
                        <div class="placeholder-avatar small rounded-circle d-flex align-items-center justify-content-center">
                            <span>@authorInitial</span>
                        </div>
                    }
                    <div class="d-flex flex-column">
                        <a class="text-success-emphasis text-decoration-none fw-semibold" href="@Url.Action("Show", "Profile", new { id = Model.Author.Id })">@Model.Author.FullName</a>
                        <span class="text-muted small">@L("Author")</span>
                    </div>
                </div>
            }
        </header>

        <div class="blog-content lead text-body-secondary" id="blogContent" style="font-size: 1.125rem;">
            @Html.Raw(Model.Content)
        </div>
    </div>
</article>

<!-- Font Size Control Buttons (Accessibility) -->
<div class="font-size-controls" role="toolbar" aria-label="@L("Font Size")">
    <button type="button" class="font-size-btn" id="fontSizeIncrease" aria-label="@L("Increase Font Size")" title="@L("Increase Font Size")">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <text x="6" y="16" font-size="14" font-weight="bold">A</text>
            <line x1="18" y1="8" x2="18" y2="16"></line>
            <line x1="14" y1="12" x2="22" y2="12"></line>
        </svg>
    </button>
    <button type="button" class="font-size-btn" id="fontSizeDecrease" aria-label="@L("Decrease Font Size")" title="@L("Decrease Font Size")">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <text x="6" y="16" font-size="14" font-weight="bold">A</text>
            <line x1="14" y1="12" x2="22" y2="12"></line>
        </svg>
    </button>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const blogContent = document.getElementById('blogContent');
            const fontSizeIncrease = document.getElementById('fontSizeIncrease');
            const fontSizeDecrease = document.getElementById('fontSizeDecrease');
            
            // Get saved font size or use default
            const defaultFontSize = 1.125; // rem
            const minFontSize = 0.875; // rem
            const maxFontSize = 1.75; // rem
            const step = 0.125; // rem
            
            let currentFontSize = parseFloat(localStorage.getItem('blogFontSize')) || defaultFontSize;
            
            // Apply saved font size
            if (blogContent) {
                blogContent.style.fontSize = currentFontSize + 'rem';
            }
            
            // Increase font size
            if (fontSizeIncrease && blogContent) {
                fontSizeIncrease.addEventListener('click', function() {
                    if (currentFontSize < maxFontSize) {
                        currentFontSize = Math.min(currentFontSize + step, maxFontSize);
                        blogContent.style.fontSize = currentFontSize + 'rem';
                        localStorage.setItem('blogFontSize', currentFontSize.toString());
                        announceToScreenReader('@L("Font Size")' + ': ' + Math.round(currentFontSize * 100) + '%');
                    }
                });
            }
            
            // Decrease font size
            if (fontSizeDecrease && blogContent) {
                fontSizeDecrease.addEventListener('click', function() {
                    if (currentFontSize > minFontSize) {
                        currentFontSize = Math.max(currentFontSize - step, minFontSize);
                        blogContent.style.fontSize = currentFontSize + 'rem';
                        localStorage.setItem('blogFontSize', currentFontSize.toString());
                        announceToScreenReader('@L("Font Size")' + ': ' + Math.round(currentFontSize * 100) + '%');
                    }
                });
            }
        });
    </script>
}

@if (Model.Author != null)
{
    var author = Model.Author;
    var authorFullName = author.FullName?.Trim() ?? string.Empty;
    var authorInitialChar = authorFullName.FirstOrDefault(char.IsLetterOrDigit);
    var authorInitial = authorInitialChar == default ? 'Y' : char.ToUpperInvariant(authorInitialChar);
    <section class="card author-card shadow-sm border-0 my-5">
        <div class="card-body d-flex flex-column flex-md-row gap-4 align-items-center">
            <div class="author-avatar">
                @if (!string.IsNullOrWhiteSpace(author.ProfileImageUrl))
                {
                    <img src="@author.ProfileImageUrl" alt="@author.FullName" class="rounded-circle border border-3 border-success-subtle" style="width:88px;height:88px;object-fit:cover;" />
                }
                else
                {
                    <div class="placeholder-avatar rounded-circle d-flex align-items-center justify-content-center">
                        <span>@authorInitial</span>
                    </div>
                }
            </div>
            <div class="flex-fill">
                <h5 class="mb-1 text-success-emphasis">@author.FullName</h5>
                <div class="text-muted small mb-2 d-flex flex-wrap gap-2">
                    @if (author.Age.HasValue) { <span>@author.Age ya≈ü</span> }
                    @if (!string.IsNullOrWhiteSpace(author.Profession)) { <span>@author.Profession</span> }
                    @if (!string.IsNullOrWhiteSpace(author.Gender)) { <span>@author.Gender</span> }
                </div>
                @if (!string.IsNullOrWhiteSpace(author.Interests))
                {
                    var interests = author.Interests.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
                    <div class="d-flex flex-wrap gap-2 mb-3">
                        @foreach (var interest in interests)
                        {
                            <span class="badge rounded-pill text-bg-success-subtle text-success-emphasis">@interest</span>
                        }
                    </div>
                }
                                <a class="btn btn-outline-success btn-sm" href="@Url.Action("Show", "Profile", new { id = author.Id })">@L("Author Profile")</a>
            </div>
        </div>
    </section>
}
