@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Localization
@using Timora.Blog.Models.ViewModels
@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<Timora.Blog.Models.Post>
@{
    ViewData["Title"] = "Search";
    // Get current culture
    var requestCultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCultureFeature?.RequestCulture?.UICulture?.Name ?? "tr-TR";
    if (string.IsNullOrEmpty(currentCulture) || currentCulture == "tr") currentCulture = "tr-TR";
    var L = new Func<string, string>((key) => LanguageStrings.Get(key, currentCulture));
    
    var searchQuery = ViewData["SearchQuery"] as string ?? "";
    var resultCount = ViewData["ResultCount"] as int? ?? 0;
}

<section class="page-header mb-4">
    <div class="card border-0 shadow-sm page-hero">
        <div class="card-body">
            <h1 class="display-6 fw-bold text-success-emphasis mb-2">@L("Search Results")</h1>
            <p class="lead text-muted mb-0">
                @if (resultCount > 0)
                {
                    <text>@string.Format(L("Search Results Count"), resultCount, searchQuery)</text>
                }
                else
                {
                    <text>@string.Format(L("No Search Results"), searchQuery)</text>
                }
            </p>
        </div>
    </div>
</section>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">üîç</div>
        <h2 class="empty-state-title">@L("No Results Found")</h2>
        <p class="empty-state-message">@string.Format(L("No Results Message"), searchQuery)</p>
        <div class="d-flex gap-2 justify-content-center">
            <a class="btn btn-outline-success" asp-controller="Blog" asp-action="Index">@L("View All Posts")</a>
            <form asp-controller="Blog" asp-action="Search" method="get" class="d-inline">
                <input type="search" name="q" class="form-control d-inline-block" style="width: auto;" placeholder="@L("Search")" value="@searchQuery">
                <button class="btn btn-success" type="submit">@L("Search Again")</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
        @foreach (var post in Model)
        {
            <div class="col">
                <div class="card h-100 post-card shadow-sm border-0">
                    <a href="@Url.Action("Post", "Blog", new { slug = post.Slug })" class="ratio ratio-1x1 post-image-wrapper">
                        @if (!string.IsNullOrWhiteSpace(post.CoverImageUrl))
                        {
                            <img src="@post.CoverImageUrl" class="card-img-top" alt="@post.Title" />
                        }
                        else
                        {
                            var trimmedTitle = post.Title?.Trim() ?? string.Empty;
                            var initialChar = trimmedTitle.FirstOrDefault(char.IsLetterOrDigit);
                            var initial = initialChar == default ? 'Y' : char.ToUpperInvariant(initialChar);
                            <div class="placeholder-image d-flex align-items-center justify-content-center text-success-emphasis">
                                <span>@initial</span>
                            </div>
                        }
                    </a>
                    <div class="card-body d-flex flex-column gap-2">
                        <div class="post-meta small text-muted d-flex gap-2 align-items-center">
                            <span>@post.PublishedAt.ToLocalTime().ToString("dd.MM.yyyy")</span>
                            @if (post.Category != null)
                            {
                                var categoryName = L(post.Category.Slug);
                                <a class="badge text-bg-success-subtle text-success-emphasis text-decoration-none" href="@Url.Action("Index", "Blog", new { category = post.Category.Slug })">
                                    @categoryName
                                </a>
                            }
                        </div>
                        <h5 class="card-title mb-0">
                            <a class="stretched-link text-decoration-none text-success-emphasis" href="@Url.Action("Post", "Blog", new { slug = post.Slug })">@post.Title</a>
                        </h5>
                    </div>
                </div>
            </div>
        }
    </div>
}

