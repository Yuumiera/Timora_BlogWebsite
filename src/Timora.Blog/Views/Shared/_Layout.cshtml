@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using Timora.Blog.Data
@using Timora.Blog.Models
@using Timora.Blog.Models.ViewModels
@using Microsoft.AspNetCore.Localization
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject AppDbContext DbContext
@{
    var requestCultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCultureFeature?.RequestCulture?.UICulture?.Name ?? "tr-TR";
    if (string.IsNullOrEmpty(currentCulture) || currentCulture == "tr") currentCulture = "tr-TR";
    var L = new Func<string, string>((key) => LanguageStrings.Get(key, currentCulture));
    var supportedCultures = LanguageStrings.GetSupportedCultures();
}
<!DOCTYPE html>
<html lang="@(currentCulture.Split('-')[0])" dir="@(currentCulture.StartsWith("ar") ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Timora.Blog</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Timora.Blog.styles.css" asp-append-version="true" />
</head>
<body class="bg-soft">
@{
    var currentUserId = UserManager.GetUserId(User);
    UserProfile? currentProfile = null;
    if (!string.IsNullOrEmpty(currentUserId))
    {
        currentProfile = await DbContext.UserProfiles.FirstOrDefaultAsync(p => p.IdentityUserId == currentUserId);
    }
}
    <!-- Skip to Content Link - Accessibility -->
    <a href="#main-content" class="skip-to-content">@L("Skip to Content")</a>
    
    <header class="site-header shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-soft navbar-toggleable-sm py-3">
            <div class="container-fluid px-4">
                <a class="navbar-brand fw-bold text-success-emphasis d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/timora-logo.svg" alt="Timora Blog" height="40" class="d-inline-block align-top" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav"
                        aria-expanded="false" aria-label="@L("Open Menu")">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <div class="navbar-categories ms-3 flex-grow-1">
                        @await Component.InvokeAsync("Categories")
                    </div>
                    <div class="navbar-search ms-3">
                        <form asp-controller="Blog" asp-action="Search" method="get" class="d-flex">
                            <div class="input-group">
                                <input type="search" name="q" class="form-control form-control-sm" placeholder="@L("Search")" aria-label="@L("Search")" value="@Context.Request.Query["q"]">
                                <button class="btn btn-outline-success btn-sm" type="submit" aria-label="@L("Search")">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="11" cy="11" r="8"></circle>
                                        <path d="m21 21-4.35-4.35"></path>
                                    </svg>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="navbar-actions d-flex align-items-center gap-3 ms-3">
                        <!-- Language Selector -->
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-success dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false" aria-label="@L("Select Language")" title="@L("Language")">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <line x1="2" y1="12" x2="22" y2="12"></line>
                                    <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                                </svg>
                                <span class="d-none d-md-inline">@LanguageStrings.GetCultureName(currentCulture)</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                                @foreach (var culture in supportedCultures)
                                {
                                    var cultureName = LanguageStrings.GetCultureName(culture);
                                    var isActive = culture == currentCulture;
                                    <li>
                                        <form asp-controller="Language" asp-action="Set" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="culture" value="@culture" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                            <button type="submit" class="dropdown-item @(isActive ? "active" : "")" @(isActive ? "aria-current=\"true\"" : "")>
                                                @cultureName
                                                @if (isActive)
                                                {
                                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="ms-2">
                                                        <polyline points="20 6 9 17 4 12"></polyline>
                                                    </svg>
                                                }
                                            </button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="theme-toggle-wrapper">
                            <div class="btn-group" role="group" aria-label="@L("Theme Mode")">
                                <button type="button" class="btn btn-sm btn-outline-success theme-btn" data-theme="light" title="@L("Light Mode")" aria-label="@L("Select Light Theme")">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                                        <circle cx="12" cy="12" r="5"></circle>
                                        <line x1="12" y1="1" x2="12" y2="3"></line>
                                        <line x1="12" y1="21" x2="12" y2="23"></line>
                                        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                                        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                                        <line x1="1" y1="12" x2="3" y2="12"></line>
                                        <line x1="21" y1="12" x2="23" y2="12"></line>
                                        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                                        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                                    </svg>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-success theme-btn" data-theme="dark" title="@L("Dark Mode")" aria-label="@L("Select Dark Theme")">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                                        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                                    </svg>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-success theme-btn" data-theme="reading" title="@L("Reading Mode")" aria-label="@L("Select Reading Theme")">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                                        <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                                        <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="dropdown">
                                <button class="icon-btn profile-icon dropdown-toggle" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false" aria-label="@L("Profile Menu")" title="@L("Profile")">
                                    <span class="visually-hidden">@L("Profile")</span>
                                    <svg viewBox="0 0 24 24" aria-hidden="true" width="20" height="20">
                                        <circle cx="12" cy="8" r="4"></circle>
                                        <path d="M5.5 20a6.5 6.5 0 0 1 13 0"></path>
                                    </svg>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                    <li>
                                        <a class="dropdown-item" href="@(currentProfile != null ? Url.Action("Show", "Profile", new { id = currentProfile.Id }) : Url.Action("Register", "Account"))">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                                <circle cx="12" cy="7" r="4"></circle>
                                            </svg>
                                            @L("My Profile")
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline" id="logoutForm">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item" id="logoutBtn">
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                                                    <polyline points="16 17 21 12 16 7"></polyline>
                                                    <line x1="21" y1="12" x2="9" y2="12"></line>
                                                </svg>
                                                @L("Logout")
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center gap-2">
                                <a class="btn btn-success btn-sm" asp-controller="Account" asp-action="Login">@L("Login")</a>
                                <a class="btn btn-outline-success btn-sm" asp-controller="Account" asp-action="Register">@L("Register")</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container py-4">
        @if (ViewData["Breadcrumbs"] is IEnumerable<BreadcrumbItem> crumbs && crumbs.Any())
        {
            @await Html.PartialAsync("_Breadcrumbs", crumbs)
        }
        <main id="main-content" role="main" class="pb-4" tabindex="-1">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-soft py-4 mt-auto">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
            <span class="fw-semibold text-success-emphasis">Timora Blog</span>
            <span class="text-muted small">&copy; @DateTime.Now.Year Timora - @L("All Rights Reserved")</span>
            <a class="text-success-emphasis small text-decoration-none" asp-controller="Home" asp-action="Privacy">@L("Privacy Policy")</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Pass translations to JavaScript
        window.translations = {
            themeChanged: '@L("Theme Changed")',
            themeChangedSuccessfully: '@L("Theme Changed Successfully")',
            light: '@L("Light")',
            dark: '@L("Dark")',
            reading: '@L("Reading")',
            cancel: '@L("Cancel")',
            confirm: '@L("Confirm")',
            close: '@L("Close")'
        };
        
        // Logout confirmation
        document.addEventListener('DOMContentLoaded', function() {
            const logoutForm = document.getElementById('logoutForm');
            const logoutBtn = document.getElementById('logoutBtn');
            
            if (logoutForm && logoutBtn) {
                logoutForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    if (typeof showConfirmation === 'function') {
                        showConfirmation(
                            '@L("Logout Confirmation")',
                            '@L("Logout Confirmation Message")',
                            function() {
                                logoutForm.submit();
                            }
                        );
                    }
                });
            }

            // TempData mesajlarını göster - site.js yüklendikten sonra
            function showTempDataMessages() {
                if (typeof showToast === 'function') {
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <text>
                        showToast('Başarılı!', '@Html.Raw(TempData["SuccessMessage"])', 'success', 5000);
                        </text>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <text>
                        showToast('Hata!', '@Html.Raw(TempData["ErrorMessage"])', 'error', 5000);
                        </text>
                    }
                } else {
                    // Retry if showToast is not yet available
                    setTimeout(showTempDataMessages, 100);
                }
            }
            
            // Try immediately, then retry if needed
            setTimeout(showTempDataMessages, 200);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
