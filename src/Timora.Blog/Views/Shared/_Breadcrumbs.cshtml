@model IEnumerable<Timora.Blog.Models.ViewModels.BreadcrumbItem>

<nav aria-label="breadcrumb" class="breadcrumb-wrapper mb-4">
    <ol class="breadcrumb mb-0">
        @foreach (var item in Model)
        {
            if (item.Active)
            {
                <li class="breadcrumb-item active text-success-emphasis" aria-current="page">@item.Text</li>
            }
            else if (!string.IsNullOrWhiteSpace(item.Url))
            {
                <li class="breadcrumb-item">
                    <a href="@item.Url" class="text-decoration-none text-muted">@item.Text</a>
                </li>
            }
            else
            {
                <li class="breadcrumb-item text-muted">@item.Text</li>
            }
        }
    </ol>
</nav>


