@using Microsoft.AspNetCore.Localization
@using Timora.Blog.Models.ViewModels
@model IEnumerable<Timora.Blog.Models.ViewModels.BreadcrumbItem>
@{
    var requestCultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCultureFeature?.RequestCulture?.UICulture?.Name ?? "tr-TR";
    if (string.IsNullOrEmpty(currentCulture) || currentCulture == "tr") currentCulture = "tr-TR";
    var L = new Func<string, string>((key) => LanguageStrings.Get(key, currentCulture));
}

<nav aria-label="breadcrumb" class="breadcrumb-wrapper mb-4">
    <ol class="breadcrumb mb-0">
        @foreach (var item in Model)
        {
            if (item.Active)
            {
                <li class="breadcrumb-item active text-success-emphasis" aria-current="page">@item.Text</li>
            }
            else if (!string.IsNullOrWhiteSpace(item.Url))
            {
                <li class="breadcrumb-item">
                    <a href="@item.Url" class="text-decoration-none text-muted">@item.Text</a>
                </li>
            }
            else
            {
                <li class="breadcrumb-item text-muted">@item.Text</li>
            }
        }
    </ol>
</nav>


