@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<Timora.Blog.Models.Post>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<section class="hero-section card border-0 shadow-sm mb-4">
    <div class="card-body p-4 p-md-5 d-flex flex-column flex-md-row align-items-center gap-4">
        <div class="flex-fill">
            <span class="badge text-bg-success-subtle text-success-emphasis mb-3">Timora Topluluğu</span>
            <h1 class="display-5 fw-bold text-success-emphasis mb-3">Her Gün Yeni Bir İlham</h1>
            <p class="lead text-muted mb-4">Tutkulu yazarlarımızın özenle hazırladığı içerikleri keşfedin. Yaşamdan teknolojiye, seyahatten sanata kadar aradığınız her şeyi burada bulacaksınız.</p>
            <div class="d-flex flex-wrap gap-3">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="btn btn-success btn-lg" asp-controller="Blog" asp-action="Create">Blog Yazısı Paylaş</a>
                }
                else
                {
                    <a class="btn btn-success btn-lg" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Create", "Blog")">Blog Yazısı Paylaş</a>
                }
                <a class="btn btn-outline-success btn-lg" asp-controller="Blog" asp-action="Index">Tüm Yazıları Gör</a>
            </div>
        </div>
        <div class="hero-illustration rounded-4"></div>
    </div>
</section>

<section class="latest-posts">
    <div class="section-header d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 text-success-emphasis mb-0">En Yeni Yazılar</h2>
        <a class="text-success text-decoration-none" asp-controller="Blog" asp-action="Index">Tümünü Gör &rarr;</a>
    </div>
    @if (!Model.Any())
    {
        <div class="alert alert-success-subtle text-success-emphasis mb-0">Henüz içerik eklenmedi. Hemen ilk yazını paylaş!</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
            @foreach (var post in Model)
            {
                <div class="col">
                    <div class="card h-100 post-card shadow-sm border-0">
                        <a href="@Url.Action("Post", "Blog", new { slug = post.Slug })" class="ratio ratio-1x1 post-image-wrapper">
                            @if (!string.IsNullOrWhiteSpace(post.CoverImageUrl))
                            {
                                <img src="@post.CoverImageUrl" class="card-img-top" alt="@post.Title" />
                            }
                        else
                        {
                            var trimmedTitle = post.Title?.Trim() ?? string.Empty;
                            var initialChar = trimmedTitle.FirstOrDefault(char.IsLetterOrDigit);
                            var initial = initialChar == default ? 'Y' : char.ToUpperInvariant(initialChar);
                            <div class="placeholder-image d-flex align-items-center justify-content-center text-success-emphasis">
                                <span>@initial</span>
                            </div>
                        }
                        </a>
                        <div class="card-body d-flex flex-column gap-2">
                            <div class="post-meta small text-muted d-flex gap-2 align-items-center">
                                <span>@post.PublishedAt.ToLocalTime().ToString("dd.MM.yyyy")</span>
                                @if (post.Category != null)
                                {
                                    <a class="badge text-bg-success-subtle text-success-emphasis text-decoration-none" href="@Url.Action("Index", "Blog", new { category = post.Category.Slug })">
                                        @post.Category.Name
                                    </a>
                                }
                            </div>
                            <h5 class="card-title mb-0">
                                <a class="stretched-link text-decoration-none text-success-emphasis" href="@Url.Action("Post", "Blog", new { slug = post.Slug })">@post.Title</a>
                            </h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>
