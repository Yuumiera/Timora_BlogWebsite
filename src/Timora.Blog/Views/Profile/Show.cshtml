@model Timora.Blog.Models.UserProfile
@{
    var isOwner = ViewBag.IsOwner as bool? ?? false;
}

<section class="profile-header card shadow-sm border-0 mb-5">
    <div class="card-body p-4 p-md-5">
        <div class="row align-items-start">
            <div class="col-auto mb-3 mb-md-0">
                @{
                    var fullName = Model.FullName?.Trim() ?? string.Empty;
                    var profileInitialChar = fullName.FirstOrDefault(char.IsLetterOrDigit);
                    var profileInitial = profileInitialChar == default ? 'Y' : char.ToUpperInvariant(profileInitialChar);
                }
                <div class="profile-avatar">
                    @if (!string.IsNullOrWhiteSpace(Model.ProfileImageUrl))
                    {
                        <img src="@Model.ProfileImageUrl" class="rounded-circle border border-3 border-success-subtle" style="width:140px;height:140px;object-fit:cover;" alt="@Model.FullName" />
                    }
                    else
                    {
                        <div class="placeholder-avatar rounded-circle d-flex align-items-center justify-content-center" style="width:140px;height:140px;font-size:2.5rem;">
                            <span>@profileInitial</span>
                        </div>
                    }
                </div>
            </div>
            <div class="col">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start mb-3">
                    <div class="flex-fill">
                        <h2 class="mb-3 text-success-emphasis">@Model.FullName</h2>
                        <div class="profile-info-list">
                            <div class="profile-info-item mb-2">
                                <strong class="text-muted me-2">Ad Soyad:</strong>
                                <span>@Model.FullName</span>
                            </div>
                            @if (Model.Age.HasValue)
                            {
                                <div class="profile-info-item mb-2">
                                    <strong class="text-muted me-2">Yaş:</strong>
                                    <span>@Model.Age yaş</span>
                                </div>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Gender))
                            {
                                <div class="profile-info-item mb-2">
                                    <strong class="text-muted me-2">Cinsiyet:</strong>
                                    <span>@Model.Gender</span>
                                </div>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Profession))
                            {
                                <div class="profile-info-item mb-2">
                                    <strong class="text-muted me-2">Meslek:</strong>
                                    <span>@Model.Profession</span>
                                </div>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Interests))
                            {
                                var interests = Model.Interests.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
                                <div class="profile-info-item mb-2">
                                    <strong class="text-muted me-2">İlgi Alanları ve Hobiler:</strong>
                                    <div class="d-inline-flex flex-wrap gap-2">
                                        @foreach (var interest in interests)
                                        {
                                            <span class="badge rounded-pill text-bg-success-subtle text-success-emphasis">@interest</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="ms-md-auto mt-3 mt-md-0 d-flex gap-2">
                        @if (isOwner)
                        {
                            <a class="btn btn-outline-primary" asp-controller="Profile" asp-action="Edit">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                </svg>
                                Profili Düzenle
                            </a>
                        }
                        <a class="btn btn-success-subtle" asp-controller="Blog" asp-action="Create">Yeni Yazı</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<h4 class="mb-3">Yayımlanan İçerikler</h4>
@{
    var publishedPosts = Model.Posts.Where(p => p.IsPublished).OrderByDescending(p => p.PublishedAt).ToList();
}
@if (!publishedPosts.Any())
{
    <div class="alert alert-success-subtle text-success-emphasis">Bu yazarın henüz yayımlanmış bir yazısı bulunmuyor.</div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
        @foreach (var post in publishedPosts)
        {
            <div class="col">
                <div class="card h-100 post-card shadow-sm border-0">
                    @if (!string.IsNullOrWhiteSpace(post.CoverImageUrl))
                    {
                        <a href="@Url.Action("Post", "Blog", new { slug = post.Slug })" class="ratio ratio-1x1 post-image-wrapper">
                            <img src="@post.CoverImageUrl" class="card-img-top" alt="@post.Title" />
                        </a>
                    }
                    else
                    {
                        var trimmedTitle = post.Title?.Trim() ?? string.Empty;
                        var postInitialChar = trimmedTitle.FirstOrDefault(char.IsLetterOrDigit);
                        var postInitial = postInitialChar == default ? 'Y' : char.ToUpperInvariant(postInitialChar);
                        <a href="@Url.Action("Post", "Blog", new { slug = post.Slug })" class="ratio ratio-1x1 post-image-wrapper">
                            <div class="placeholder-image d-flex align-items-center justify-content-center text-success-emphasis">
                                <span>@postInitial</span>
                            </div>
                        </a>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <a class="text-decoration-none text-success-emphasis" href="@Url.Action("Post", "Blog", new { slug = post.Slug })">@post.Title</a>
                        </h5>
                        <small class="text-muted">@post.PublishedAt.ToLocalTime().ToString("dd.MM.yyyy")</small>
                        @if (post.Category != null)
                        {
                            <div class="mt-2">
                                <span class="badge text-bg-success-subtle text-success-emphasis">@post.Category.Name</span>
                            </div>
                        }
                        @if (isOwner)
                        {
                            <div class="mt-3 pt-3 border-top d-flex gap-2">
                                <a href="@Url.Action("Post", "Blog", new { slug = post.Slug })" class="btn btn-sm btn-outline-success flex-fill">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                    Görüntüle
                                </a>
                                <a href="@Url.Action("Edit", "Blog", new { id = post.Id })" class="btn btn-sm btn-outline-primary flex-fill">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                    Düzenle
                                </a>
                                <form asp-controller="Blog" asp-action="Delete" asp-route-id="@post.Id" method="post" class="flex-fill" onsubmit="return confirmDelete(event, '@post.Title');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                            <polyline points="3 6 5 6 21 6"></polyline>
                                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                        </svg>
                                        Sil
                                    </button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div class="mt-auto pt-3">
                                <a href="@Url.Action("Post", "Blog", new { slug = post.Slug })" class="btn btn-sm btn-outline-success w-100">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                    Yazıyı Oku
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        function confirmDelete(event, postTitle) {
            event.preventDefault();
            const form = event.target;
            
            showConfirmation(
                'Yazıyı Sil',
                `"${postTitle}" başlıklı yazıyı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.`,
                function() {
                    form.submit();
                }
            );
            
            return false;
        }
    </script>
}

